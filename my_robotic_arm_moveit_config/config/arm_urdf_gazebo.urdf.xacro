<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="arm_urdf">
  <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />
  
  <!-- Import arm_urdf urdf file -->
  <xacro:include filename="arm_urdf.urdf" />
  
  <!-- Import Gazebo control_xacro -->
  <xacro:include filename="arm_urdf_gazebo.ros2_control.xacro" />
  
  <xacro:arm_urdf_ros2_control name="GazeboSimSystem" initial_positions_file="$(arg initial_positions_file)"/>
</robot>
